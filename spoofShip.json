{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "spoofShip",
  "description": "json scheme for spoofing a ship",
  "type": "object",
  "properties": {
    "ship": {
      "type": "object",
      "properties": {
        "shipID": {
          "description": "shipID from db of ship to spoof",
          "type": "number",
          "minimum": 1
        }
      },
      "required": [
        "shipID"
      ]
    },
    "AIS": {
      "type": "object",
      "properties": {
        "longitude": {
          "description": "longitude of ship",
          "type": "number",
          "minimum": -180,
          "maximum": 180
        },
        "latitude": {
          "description": "latitude of ship",
          "type": "number",
          "minimum": -90,
          "maximum": 90
        },
        "timestamp": {
          "description": "timestamp of AIS signal",
          "type": "number",
          "minimum": 0,
          "maximum": 63
        },
        "course": {
          "description": "course of ship",
          "type": "number",
          "minimum": 0,
          "maximum": 3600
        },
        "speed": {
          "description": "speed of ship",
          "type": "number",
          "minimum": 0,
          "maximum": 1022
        },
        "heading": {
          "description": "heading of ship",
          "type": "number",
          "minimum": 0,
          "maximum": 359
        },
        "rot": {
          "description": "rotation of ship",
          "type": "number",
          "minimum": -127,
          "maximum": 128
        },
        "status": {
          "description": "status of ship",
          "type": "number",
          "minimum": 0,
          "maximum": 15
        }
      },
      "required": [
        "status",
        "speed",
        "longitude",
        "latitude",
        "course",
        "trueHeading",
        "timestamp"
      ]
    },
    "user": {
      "type": "object",
      "properties": {
        "apiKey": {
          "description": "API key of the user",
          "type": "string",
          "maxLength": 50
        }
      },
      "required": [
        "apiKey"
      ]
    }
  },
  "required": [
    "ship",
    "AIS",
    "user"
  ]
}